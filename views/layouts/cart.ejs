<%- include('../includes/head') %>
<%- include('../includes/navigation') %>

<br>
<% if(products.length > 0) { %>
    <% for (let product of products) { %>
        <div class="card">
            <div class="card-header text-center">
                <h1>
                    <%= product.title %>
                </h1>
                <pre> <%= product.description %> </pre>
            </div>
            
            <div class="card-footer">
                <h2>Price : <%= product.price %></h2>
                <br>
                <h2>Quantity: <%= product.cartItem.quantity %></h2>
                <br>
                <a class="btn btn-success" href="/product/deleteFromCart/<%=product.id%>" >Delete Product</a>
                <br>
            </div>
            <br>
        </div>
        <hr>
    <% } %>
    <div class="text-center">
        <form action="/postOrder" method="POST">
            <button type="submit" class="btn">Order Now!</button>
        </form>
    </div>
<% } else { %>
    <h3 class="text-center text-primary">No Products Yet!</h3>
<% } %>
<%- include('../includes/end') %>