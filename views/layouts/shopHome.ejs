<%- include('../includes/head') %>
<%- include('../includes/navigation') %>
<div class="container">
<% if(!isAdmin) { %>
    <h1 style="text-align: center;color:aqua">Welcome To The Shop! User</h1>
    <hr>
    <% if(Products) { %>
        <% if (Products.length> 0) { %>
            <ul>
                <% for (let product of Products) { %>
                    <li>
                                <div class="card">
                                    <div class="card-header text-center">
                                        <h1>
                                            <%= product.title %>
                                        </h1>
                                        <pre> <%= product.description %> </pre>
                                    </div>
                                    <div class="card-body">
                                        <img src="<%= imageSRC %>" alt="<%= product.prodName %>"/>
                                    </div>
                                    <div class="card-footer">
                                        <h2>Price : <%= product.price %>
                                        </h2>
                                    </div>
                                </div>
                                
                                <hr>
                    </li>
                    <a type="btn btn-success" href="/product/<%= product._id %>">Details</a>
                    <% } %>
            </ul>
            <% } else { %>
                <pre><h3 class = 'centerClass'>No Products Available Here!</h3></pre>
                <% } %>
    <% } %>
<% } else { %>
    <h1 style="text-align: center;color:aqua">Welcome To The Shop! Admin</h1>
    <hr>
    <% if(Products) { %>
        <% if (Products.length> 0) { %>
            <ul>
                <% for (let product of Products) { %>
                    <li>
                                <div class="card">
                                    <div class="card-header text-center">
                                        <h1>
                                            <%= product.title %>
                                        </h1>
                                        <pre> <%= product.description %> </pre>
                                    </div>
                                    <div class="card-body">
                                        <img src="<%= imageSRC %>" alt="<%= product.prodName %>"/>
                                    </div>
                                    <div class="card-action">
                                        <div class="row text-center">
                                            <div class="col-6">
                                                <a class="btn btn-info" href="/admin/edit/<%= product._id %>">Edit!</a>
                                            </div>
                                            <div class="col-6">
                                                <a class="btn btn-danger" href="/admin/delete/<%= product._id %>">Delete!</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <h2>Price : <%= product.price %>
                                        </h2>
                                    </div>
                                </div>
                                
                                <hr>
                    </li>
                    <a type="btn btn-success" href="/product/<%= product._id %>">Details</a>
                    <% } %>
            </ul>
            <% } else { %>
                <pre><h3 class = 'centerClass'>No Products Available Here!</h3></pre>
                <% } %>
    <% } %>
<% } %>

</div>


<%- include('../includes/end') %>