<%- include('../includes/head') %>
<%- include('../includes/navigation') %>
<div class="container">

    <h1 style="text-align: center;color:aqua">Welcome To The Shop!</h1>
    <hr>
    <% if(Products) { %>
        <% if (Products.length> 0) { %>
            <ul>
                <% for (let product of Products) { %>
                    <li>
                                <div class="card">
                                    <div class="card-header text-center">
                                        <h1>
                                            <%= product.prodName %>
                                        </h1>
                                        <pre> <%= product.prodDesc %> </pre>
                                    </div>
                                    <div class="card-body">
                                        <img src="<%= imageSRC %>" alt="<%= product.prodName %>"/>
                                    </div>
                                    <div class="card-footer">
                                        <h2>Price : <%= product.prodPrice %>
                                        </h2>
                                    </div>
                                </div>
                                
                                <hr>
                    </li>
                    <a type="btn btn-success" href="/product/<%= product.prodId %>">Details</a>
                    <% } %>
            </ul>
            <% } else { %>
                <pre><h3 class = 'centerClass'>No Products Available Here!</h3></pre>
                <% } %>
    <% } %>
</div>


<%- include('../includes/end') %>